# ============================================
# ClawShield Environment Configuration
# Copy to .env and fill in values
# ============================================

# Server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL 17)
DATABASE_URL=postgresql://user:password@localhost:5432/clawshield
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# JWT (RS256)
JWT_PRIVATE_KEY_PATH=/secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/secrets/jwt_public.pem
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=clawshield
JWT_AUDIENCE=clawshield-api

# Encryption
ENCRYPTION_KEY=  # 32-byte hex string for AES-256-GCM

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Firewall
FIREWALL_THREAT_THRESHOLD=0.8
FIREWALL_BLOCK_DURATION=3600
FIREWALL_MAX_WS_CONNECTIONS_PER_IP=5

# Skill Analysis
SKILL_ANALYSIS_TIMEOUT=5000
SKILL_ANALYSIS_MEMORY_LIMIT=52428800

# OpenClaw Target
OPENCLAW_TARGET_URL=http://localhost:8080

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Alerts (Slack/Discord/generic webhook)
ALERT_WEBHOOK_URL=

# CORS
CORS_ALLOWED_ORIGINS=https://dashboard.clawshield.io
