{
  "name": "clawshield",
  "version": "1.0.0",
  "description": "Agent-to-agent firewall for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run scripts/db-migrate.sh",
    "db:seed": "bun run src/db/seeds/index.ts",
    "db:studio": "drizzle-kit studio",
    "audit": "bun audit",
    "snyk-test": "snyk test",
    "snyk-monitor": "snyk monitor",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "fastify": "5.2.0",
    "@fastify/helmet": "12.0.0",
    "@fastify/rate-limit": "10.0.0",
    "@fastify/cors": "10.0.0",
    "@fastify/reply-from": "11.0.0",
    "@fastify/websocket": "11.0.1",
    "ws": "8.18.0",
    "zod": "3.24.1",
    "drizzle-orm": "0.38.3",
    "postgres": "3.4.5",
    "ioredis": "5.4.2",
    "argon2": "0.41.1",
    "jsonwebtoken": "9.0.2",
    "@noble/hashes": "1.6.1",
    "tweetnacl": "1.0.3",
    "acorn": "8.14.0",
    "estree-walker": "3.0.3",
    "esprima": "4.0.1",
    "semver": "7.6.3",
    "pino": "9.5.0",
    "pino-pretty": "13.0.0"
  },
  "devDependencies": {
    "typescript": "5.7.2",
    "eslint": "9.17.0",
    "@typescript-eslint/parser": "8.19.1",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "prettier": "3.4.2",
    "husky": "9.1.7",
    "vitest": "2.1.8",
    "@vitest/coverage-v8": "2.1.8",
    "supertest": "7.0.0",
    "drizzle-kit": "0.30.1",
    "@types/node": "22.10.5",
    "@types/ws": "8.5.13",
    "@types/jsonwebtoken": "9.0.7",
    "@types/estree": "1.0.6",
    "@types/supertest": "6.0.2",
    "@sentry/node": "8.47.0"
  }
}
